generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  results   Result[]
  createdAt DateTime @default(now())

  @@index([name])
}

model Result {
  id         String   @id @default(uuid())
  prompt     String
  imageUrl   String
  similarity Float
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
}